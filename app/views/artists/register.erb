<% if flash.has?(:message) %>
<div class="col-sm-6 offset-sm-3">
	<% flash[:message].each do |msg| %>
	<div class="alert alert-danger text-center"><%= msg %></div>
	<% end %>
</div>
<% end %>

<div class="col-sm-6 offset-sm-3">
		<form action="/artists" method="POST">
			<h2>Register for a new artist account</h2>
			<div class="form-group">
				<label for="name">Name: </label>
				<input type="text" class="form-control" name="artist[name]" id="name">
			</div>

			<div class="form-group">
				<label for="name">Email: </label>
				<input type="email" class="form-control" name="artist[email]" id="email">
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" name="artist[password]" id="password" class="form-control">
			</div>

			<input type="submit" class="btn btn-outline-secondary" value="Register">
		</form>
</div>