<% if flash.has?(:message) %>
	<div class="col-sm-6 offset-sm-3">
		<% flash[:message].each do |msg| %>
		<div class="alert alert-danger text-center"><%= msg %></div>
		<% end %>
	</div>
<% end %>

<div class="col-sm-6 offset-sm-3">
	<form action="/artists/<%= @artist.slug %>" method="POST">
		<input type="hidden" name="_method" value="PATCH">
		<h2>Edit Profile</h2>
		<div class="form-group">
			<label for="name">Name: </label>
			<input type="text" class="form-control" name="artist[name]" id="name" value="<%= @artist.name %>">
		</div>

		<div class="form-group">
			<label for="name">Email: </label>
			<input type="email" class="form-control" name="artist[email]" id="email" value="<%= @artist.email %>">
		</div>

		<input type="submit" class="btn btn-outline-secondary" value="Save">
	</form>
</div>