<% if flash.has?(:message) %>
		<div class="col-sm-6 offset-sm-3">
			<% flash[:message].each do |msg| %>
			<div class="alert alert-danger text-center"><%= msg %></div>
			<% end %>
		</div>
<% end %>

<div class="col-sm-6 offset-sm-3">
	<h2>Application for: <%= current_user.name %></h2>
	<form action="/applications" method="POST" class="my-3">

		<div class="form-group">
			<label for="institution_select">Select Institution</label>
			<select class="form-control" id="institution_select" name="application[institution_id]">
				<% @institutions.each do |inst| %>
				<option value="<%= inst.id %>"><%= inst.name %></option>
				<% end %>
			</select>
		</div>

		<div class="form-group">
			<label for="submission_call">Submission Call Title</label>
			<input type="text" class="form-control" name="application[submission_call]" placeholder="">
		</div>
		
		<div class="form-group">
			<label for="artist_statement">Artist Statement</label>
			<textarea id="artist_statement" class="form-control" rows="3" placeholder="" name="application[statement]"></textarea>
		</div>
		
		<div class="form-group">
			<label for="photo_url">URL of Work Sample Image</label>
			<input type="text" placeholder="" class="form-control" id="photo_url" name="application[photo_url]">
		</div>
		

		<input type="submit" class="btn btn-outline-secondary" value="Create Application">
	</form>
</div>
