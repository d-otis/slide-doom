
<div class="col-sm-6">
	<h1>{Current Artist/User Name}</h1>
	<form action="/applications" method="POST">

		<div class="form-group">
			<label for="institution_select">Select Institution</label>
			<select class="form-control" id="institution_select" name="institution[name]">
				<% @institutions.each do |inst| %>
				<option><%= inst.name %></option>
				<% end %>
			</select>
		</div>

		<div class="form-group">
			<label for="submission_call">Submission Call Title</label>
			<input type="text" class="form-control" name="application[submission_call]" placeholder="Submission Call Title">
		</div>
		
		<div class="form-group">
			<label for="artist_statement">Artist Statement</label>
			<textarea id="artist_statement" class="form-control" rows="3" placeholder="Artist Statement" name="artist[statement]"></textarea>
		</div>
		
		<div class="form-group">
			<label for="photo_url">URL of Work Sample Image</label>
			<input type="text" placeholder="image url" class="form-control" id="photo_url" name="artist[photo_url]">
		</div>
		

		<input type="submit" class="btn btn-outline-secondary" value="Create Application">
	</form>
</div>
